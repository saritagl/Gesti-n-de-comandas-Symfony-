{% extends 'main/index.html.twig' %}

{% block body %}
    <div class="row">
        <div class="well col-sm-3 col-sm-offset-4 form-login-div">
            <h4>INGRESO</h4>
            <form action="{{ path('security_login_check') }}" method="post">
                <div class="form-group">
                    <input type="text" id="username" name="_username" placeholder="Usuario" value="{{ last_username }}" class="form-control"/>
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="_password" placeholder="ContraseÃ±a" class="form-control" />
                </div>
                <input type="hidden" name="_target_path" value="dashboard_index" />
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>
    </div>
{% endblock %}
