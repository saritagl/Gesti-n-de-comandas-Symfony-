    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th> Cantidad</th>
                    <th> Producto</th>
                    <th> IVA</th>
                    <th> SubTotal</th>
                    <th> Total</th>
                </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.amount }}</td>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.product.price * item.amount * 0.12 }}</td>
                    <td>{{ item.product.price * item.amount }}</td>
                    <td>{{ item.product.price * item.amount * 1.12 }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

