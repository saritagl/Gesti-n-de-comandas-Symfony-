{% extends 'dashboard/layout.html.twig' %}
{%  form_theme form 'form_row.html.twig' %}

{% block panel_heading %}Adici√≥n de comida{% endblock %}
{% block panel_body %}

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.price) }}
        {{ form_row(form.description) }}
        {{ form_row(form.category) }}
        {{ form_label(form.file, '', {'label_attr': {'class': 'control-label'} }) }}
        {{ form_errors(form.file) }}
        {{ form_widget(form.file, {'attr': {'class': 'form-control-file'} }) }}
        <div class="form-group">
            <div>
                <a  href="{{ path('product_index') }}" class="btn btn-default">Volver al listado</a>
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-default'}}) }}
            </div>
        </div>
    {{ form_end(form) }}

{% endblock %}
